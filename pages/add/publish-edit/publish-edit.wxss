body {
	background: #202020;
}

.text-edit {
	position: relative;
	width: 100%;
	height: 100vh;
	overflow: hidden;
	color: #fff;
}

.textbg-img {
	width: 100%;
	height: 100%;
}

.text-cont {
	width: 100%;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	overflow: hidden;
}

.text-area-con {
	width: 100%;
	height: 334rpx;
	line-height: 45rpx;
	background: rgba(0, 0, 0, 0.45);
	color: #fff;
	padding: 20rpx;
	font-size: 30rpx;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
}

.text-cont-btn {
	padding: 30rpx;
}

.image-edit {
	padding: 40rpx 25rpx;
}

.imgedit-item {
	width: 100%;
	min-height: 360rpx;
	position: relative;
	margin-top: 40rpx;
}

.imgedit-item  .e-img {
	width: 100%;
	height: 360rpx;
}

.imgedit-del {
	position: absolute;
	top: 0;
	right: 0;
	z-index: 99;
	width: 76rpx;
	height: 68rpx;
}

.imgedit-del  .v-1 {
	width: 0;
	height: 0;
	border-top: 68rpx solid #fff;
	border-left: 76rpx solid transparent;
}

.imgedit-del  .t-1 {
	position: absolute;
	top: 6rpx;
	right: 12rpx;
	color: #333;
	font-size: 26rpx;
}

.imgedit-cont {
	width: 100%;
	height: 360rpx;
	overflow: hidden;
	opacity: 0.5;
}

.i-c-img {
	width: 100%;
	height: auto;
}

.imgedit-area {
	position: absolute;
	top: 55rpx;
	left: 100rpx;
	z-index: 19;
	width: 500rpx;
	height: 250rpx;
	padding: 5rpx;
	font-size: 30rpx;
	line-height: 42rpx;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
}

.imgedit-area .error {
	border: 1rpx solid #f00;
}

.imgedit-btn {
	width: 100%;
	height: 100rpx;
	line-height: 88rpx;
	margin-top: 40rpx;
	background: #333;
	text-align: center;
	color: #999;
	font-size: 100rpx;
	overflow: hidden;
}

.edit-area-placeholder {
	color: #fff;
	line-height: 45rpx;
}

.edit-sub-btn,
 .edit-close-btn {
	width: 332rpx;
	height: 82rpx;
	line-height: 82rpx;
	background: rgba(83, 83, 83, 1);
	-webkit-border-radius: 5rpx;
	border-radius: 5rpx;
	font-size: 30rpx;
	color: rgba(255, 255, 255, 1);
	text-align: center;
	letter-spacing: 5rpx;
}

.edit-sub-btn {
	float: right;
	background: #7660FF;
}

.edit-close-btn {
	float: left;
	background: #535353;
}

.s-modal-bottom {
	margin-top: 40rpx;
	overflow: hidden;
}

.choose-music {
	position: relative;
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	background: rgba(0, 0, 0, 0.15);
}

.choose-music  .t-1 {
	display: inline-block;
	font-size: 30rpx;
	color: #fff;
	max-width: 500rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.choose-music  .v-1 {
	position: absolute;
	top: 0;
	right: 20rpx;
	font-size: 24rpx;
	line-height: 80rpx;
}

.choose-music  .icon-music {
	display: inline-block;
	width: 35rpx;
	height: 38rpx;
	padding: 5rpx;
	vertical-align: middle;
}

.choose-music2 {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 30rpx;
	background: #333;
}

.choose-music2  .t-1 {
	display: inline-block;
	font-size: 30rpx;
	color: #fff;
	max-width: 450rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.choose-music2  .icon-music {
	display: inline-block;
	width: 34rpx;
	height: 36rpx;
	margin-right: 5rpx;
	margin-top: 25rpx;
}
