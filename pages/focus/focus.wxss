  color: #b5b5b5;
}

.nav-video {
  margin: 0 30rpx;
}

/* 底部栏 */

.bottom-bar {
  display: flex;
  flex-direction: row;
  margin: 30rpx;
}

/* 图标右侧的文字 */

.bottom-text {
  font-size: 32rpx;
  color: #d7d7d7;
}

/* 图标 */

.bottom-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  vertical-align: bottom;
}

.bottom-bar-share {
