/* 个人部分 */

.nav-contentborder {
   border-top: 1px solid #565656;
  margin: 5rpx 25rpx; 
}

.nav-content {
  display: flex;
  flex-direction: column;
  margin: 30rpx;
}

.nav-contentup {
  display: flex;
  flex-direction: row;
}
.nav-contentup-img{
  width: 100rpx;
  height: 100rpx;
  border: 5px solid #cdcdcf;
  border-radius: 50%;
}
.nav-contentdown {
  margin-top: 25rpx ;
}

.nav-contentdown-text {
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 2rpx;
}

