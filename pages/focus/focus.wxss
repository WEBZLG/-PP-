.content {
  display: flex;
  background: -webkit-linear-gradient(
    top,#3c3c3c,#535353,#313131
  );
  width: 100%;
  height: 100%;
}

/* 顶部栏打包 */

.tab {
  text-align: center;
  padding: 25rpx 15rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  font-size: 35rpx;
  color: #fff;
}

.topTabSwiper {
  display: flex;
  flex-direction: row;
  justify-content: center;
  zoom: 1;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  z-index: 100;
  background: #3e3e3e;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 2px solid #fff;
  color: #fff;
}
.swiper {
  width: 100%;
  margin-top: 100rpx;
  flex-grow: 1;
}

 .swiper_con {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between; 
  margin-left: 30rpx;
} 
/* 左侧文字 */
.swiper_con-left {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
}
.swiper_conone{
   border-top: 1px solid #565656;
}



.swiper_con-left1 {
  color: #fff;
  font-size: 30rpx;
}

/* 日期 */

.swiper_con-left2 {
  color: #b7b7b7;
  font-size: 26rpx;
  margin-top: 8rpx;
}

/* 查看 */

.swiper_con-righrt {
  height: 100%;
  margin: 15rpx 40rpx;
}

.swiper_con-righrt1 {
  color: #ccc;
  margin-right: 40rpx;
  font-size: 30rpx;
}

