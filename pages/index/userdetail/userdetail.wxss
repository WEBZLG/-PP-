/* pages/userdetail/userdetail.wxss */
.bg-color, page {
  height: 100%;
  background-color: #4b4b4b;
}

.person, .infor-mark, .infor-more {
  display: flex;
}

.top-content {
  padding: 0 30rpx;
}

.information { 
  width: 70%;
  color: #fff;
  padding: 20rpx 0;
}

.headimg {
  width: 160rpx;
  height: 224rpx;
  margin: 30rpx 0;
  background-size: cover;
}

.infor-mark {
  font-size: 40rpx;
}

.infor-img, .redact {
  margin: 0 10rpx;
}

.infor-approve {
  font-size: 20rpx;
  color: #fff;
  border: 2rpx #fff solid; 
  border-radius: 36rpx;
  height: 30rpx;
  padding: 0 20rpx;
  margin-top: 16rpx;
  margin-left: 30rpx;
}

.sign-text {
  font-size: 28rpx;
  color: #cacaca;
  line-height: 36rpx;
  margin: 20rpx 0;
}

.infor-details {
  font-size: 24rpx;
  color: #cacaca;
  line-height: 36rpx;
}

.redact {
  color: #fff;
  font-size: 24rpx;
  border: 1rpx solid #fff;
  border-radius: 30rpx;
  height: 40rpx;
  padding: 0 15rpx;
  line-height: 40rpx;
  margin-top: 16rpx;
}

.head-box, .small-box {
  text-align: center;
}

.head {
  height: 120rpx;
  width: 120rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
  margin: 16rpx auto 10rpx;
}

.smallhead {
  height: 40rpx;
  width: 40rpx;
}

.other-data {
  width: 70%;
  color: #fff;
  font-size: 32rpx;
  line-height: 40rpx;
}

.statistics, .action {
  display: flex;
  margin-bottom: 20rpx;
}

.item {
  width: 33.33%;
  text-align: left;
}

.number {
  font-size: 34rpx;
}

.text {
  font-size: 24rpx;
  color: #c2c2c2;
}

.view-detail, .deposit-apply {
  color: #fff;
  font-size: 24rpx;
  border: 1rpx solid #fff;
  border-radius: 30rpx;
  height: 40rpx;
  padding: 0 15rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
}

.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  color: #eee;
  margin-bottom: 4rpx;
}

.tab-item {
  width: 25%;
  text-align: center;
  display: inline-block;
  font-size: 28rpx;
}

.tab-item.active {
  color: #eee;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 110rpx;
  background: #eee;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  border-radius: 16rpx;
}

.block-item {
  display: flex;
  flex-wrap: wrap;
}

.item-ans {
  width: 33.33%;
  height: 370rpx;
  justify-content: space-between;
  position: relative;
}

.cover {
  width: 100%;
  height: 100%;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675f9;
  color: #4675f9;
}

.scoll-h {
  height: 100%;
}

.cover-img {
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
  height: 40rpx;
  width: 40rpx;
}

.cover-text {
  position: absolute;
  left: 50rpx;
  bottom: 10rpx;
  color: #fff;
  font-size: 32rpx;
}

.vip {
  height: 30rpx;
  width: 30rpx;
}
.head-img{
  height:100rpx;
  width:100rpx;
  border: 4rpx solid #c4c4c4;
  border-radius:50%;
}
.gift-text{
  font-size:28rpx;
  color:#eee;
  margin-left:4rpx;
  line-height:42rpx;
}
.gift-words{
  color: #c4c4c4;
}
.gift-time{
  font-size:24rpx;
  color:#c4c4c4;
}
.gift-item{
  display: flex;
  padding:10rpx 20rpx;
}
.who-time,
.say-num{
  display: flex;
  justify-content: space-between;
}
.words-nickname{
  font-size: 28rpx;
  color: #eee;
}
.gift-words{
  font-size: 28rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.words-content{
  width:100%;
  line-height:60rpx;
  margin-left:10rpx;
}
.words-num{
  height:40rpx;
  background-color:#eee;
  font-size:26rpx;
  line-height:40rpx;
  padding:0 10rpx;
  border-radius:20rpx;
}
.dialog-layer {
  position: absolute;
  bottom: -100%;
  height: 0;
  width: 100%;
  overflow: hidden;
}

.dialog-white-space {
  height: 100%;
  width: 100%;
}
.dialog-content{
  position: absolute;
  height: 900rpx;
  width: 100%;
  bottom: 0rpx;
  background-color:#fff;
  border-top-left-radius: 2%;
  border-top-right-radius: 2%;
}
.scroll-h{
  height: 730rpx;
}
.close{
  text-align:right;
  margin:0 20rpx;
  border-bottom:2rpx solid #c4c4c4;
}
.close-btn{
  height:56rpx;
  width:56rpx;
  margin:10rpx 0;
}
.dialog-item{
  display: flex;
  padding:10rpx 20rpx;

  /* justify-content:space-evenly; */
}
.dialog-head{
  height: 80rpx;
  width: 80rpx;
  border: 2rpx solid #c4c4c4;
  border-radius: 50%;
}
.dialog-words{
  margin:0 10rpx;
}
.words-text{
  display: inline-block;
  padding:20rpx;
  color:#636363;
  font-size:28rpx;
  margin-top:16rpx;
  background-color:#ccc;
  border-top-right-radius:20rpx;
  border-bottom-left-radius:20rpx;
  border-bottom-right-radius:20rpx;
}
.name-text-right{
  text-align: right;
}
.words-text-right{
  float:right;
  border-top-right-radius:0rpx;
  border-top-left-radius:20rpx;
}

.dialog-item-right{
  flex-direction:row-reverse;
}
.ipt-text{
  display:flex;
  /* position:absolute;
  bottom:0;
  left:0; */
  width:96%;
  margin: 0 auto;
  height:80rpx;
  line-height: 80rpx;
  justify-content: space-between;
  border-top: 2rpx solid #c4c4c4;
}
.send-btn{
  font-size:28rpx;
  color:#909090;
}

.ipt{
  width:80%;
  height:100%;
  text-indent: 12rpx;
  font-size: 28rpx;
}