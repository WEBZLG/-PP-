<!--pages/video/video.wxml-->
<!-- 视频资源 -->
<view style='position: relative;height:100%;overflow:hidden' wx:for='{{IndexList}}' wx:key='index'>
<video id="myVideo" src="{{item.url}}" autoplay='true' show-fullscreen-btn='{{false}}' show-center-play-btn="{{false}}" objectFit='cover'  style='height:100%;' data-id='{{index}}'  custom-cache='{{false}}' controls="{{false}}" bindended="bindended"></video>
<!-- 点击滑动蒙版图层 -->
<cover-view data-time="{{lastTapTime}}" class="ball" id="id" bindtouchend="handletouchend" bindtouchmove="handletouchmove" bindtouchstart="handletouchstart" catchtap="videoHandle" style='display:{{isShow}}'>  
<!-- 公告 -->
<cover-view class='scroll_view_border' >
  <cover-view class="srcoll_view" bindtap="textclick">111111111111</cover-view>
</cover-view>
<!-- 地址 -->
<cover-view class='my-address'>
  <cover-view class='address'   bindtap='switchcity'>
    <cover-view>
      <cover-image class='small-icon' src='/image/site.png'></cover-image>
    </cover-view>
      <cover-view class='public-text'>哈尔滨</cover-view>
  </cover-view>
  <cover-view class='search' bindtap='search'><cover-image class='small-icon' src='/image/search.png'></cover-image></cover-view>
</cover-view>
  <!-- 播放按钮 -->
  <cover-image src='../../image/play.png' class='videoplay' style='display:{{display_play}}'></cover-image>
  <cover-view class='comment_border' style='display:{{display_pl}}'>
    <cover-view class='sidebar_b_rt'>
      <!-- 头像 -->
      <cover-image src='{{item.wximage}}' data-userid='{{item.id}}' class='head_img' catchtap='userdetail'></cover-image>
    </cover-view>
  <cover-view class='sidebar_b_rt'>
    <!-- 礼物 -->
    <cover-image src='../../image/gift.png' data-userid='{{item.id}}' class='comment_img' catchtap='showgiftsModal'></cover-image>
    <!-- 礼物数 -->
    <!-- <cover-view class='comment_num'>1</cover-view> -->
  </cover-view>
  <!-- 赞 -->
  <cover-view class='sidebar_b_rt'>
    <cover-image src="../../image/like_red.png" catchtap='toCollect' class='comment_img ' data-id='{{index}}' data-item='{{item}}' wx:if='{{item.if_like==0}}'></cover-image>
    <cover-image src="../../image/like.png" catchtap='toCollect' class='comment_img ' data-id='{{index}}' data-item='{{item}}' wx:else></cover-image>
    <!-- 赞数 -->
    <cover-view class='comment_num' catchtap='toCollect' data-id='{{index}}' data-item='{{item}}'>{{item.likenum}}</cover-view>
  </cover-view>
  <!-- 评论 -->
  <cover-view class='sidebar_b_rt'>
    <cover-image src='../../image/talk.png' class='comment_img ' catchtap='getCommentMessage' data-id="{{item.id}}" data-img_url='{{item.wapimg}}'></cover-image>
    <!-- 评论数 -->
    <cover-view class='comment_num' catchtap='getCommentMessage' data-id="{{item.id}}" data-img_url='{{item.wapimg}}'>{{item.commentnum}}</cover-view>
  </cover-view>
  <!-- 分享 -->
  <cover-view class='sidebar_b_rt'>
    <button class='comment__button' open-type='share'>
      <cover-image src='../../image/share.png' class='comment_num'>转发</cover-image>
    </button>
    <!-- 转发数 -->
    <cover-view class='comment_num'>分享</cover-view>
  </cover-view>
  <cover-view class='sidebar_b_rt'>
    <!-- 活动 -->
    <cover-image src='../../image/join.png' data-userid='{{item.userid}}' class='comment_img' catchtap=''></cover-image>
    <!-- 活动人数 -->
    <cover-view class='comment_num'>1</cover-view>
  </cover-view>
</cover-view>
<!-- 描述 -->
  <cover-view class="desc" >
    <cover-view class='nick-name'>
      <cover-view>{{item.wxname}}</cover-view>
      <cover-view class='focus pding'>
        <cover-image wx:if="{{item.relation==0}}" class='length-icon' src='../../image/follow.png' bindtap='focus' data-id='{{index}}' data-item='{{item}}'></cover-image >
        <cover-image wx:else class='length-icon' src='../../image/followed.png' bindtap='focus' data-id='{{index}}' data-item='{{item}}'></cover-image >
      </cover-view> 
    </cover-view>
    <cover-view class='activition'><cover-image class='length-icon' src='../../image/activity.png'></cover-image></cover-view>
    <cover-view >
      <cover-view class="desc-text">{{item.content}}</cover-view>
    </cover-view>
    <cover-view class='music'>
      <cover-view><cover-image class='small-icon' src='../../image/bgm.png'></cover-image></cover-view>
      <cover-view class='public-text'>{{item.name}}</cover-view>
    </cover-view>
  </cover-view>
  <!-- 礼物 -->
  <cover-view class='gifts'>
    <cover-view class='contribution'>贡献榜单Top3</cover-view>
    <cover-view class='top-name' wx:for='{{item.top}}' wx:for-item='top' wx:for-index='topindex' wx:key='index'>
      <cover-image class='top-img top-one' src='{{item.wximage}}'></cover-image>
      <cover-view>{{top.wxname}}</cover-view>
    </cover-view>
  </cover-view>
</cover-view>
<!-- 隐藏评论窗口按钮 -->
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
  <!-- 评论遍历 -->
  <view class="commentTitle">
    <text style='margin-left:40%'>全部评论({{commentList.length}})</text>
    <image class='down' src='../../image/close@2x.png' bindtap='hidegiftsModal'></image>
  </view>
  <scroll-view scroll-y='true' style='height:500rpx'>
    <block wx:for='{{commentList}}' wx:key='item.vid'>
      <view class="commentContent">
        <view>
          <image src='{{item.userimg}}' class='head_img'></image>
        </view>
        <view>
          <view class="contentLeft">
            <view style='color:#000000'>{{item.username}}</view>
            <view class='commentTime'>{{item.ComTime}}</view>
          </view>
          <!-- <view class="clear"></view> -->
          <view class="Comment">
            <text style='width:480rpx;color:#666;'>{{item.ComContent}}</text>
            <view class='commentTime'>
              <!-- <image src='../../image/like_m.png' class='smallb-icon'></image> -->
              <image src='{{comment_not_zan?"../../image/liked_m.png":"../../image/like_m.png"}}' class='smallb-icon' catchtap='commentCollect'></image>
              <text style='font-size:17rpx;'>100</text>
            </view>
          </view>
        </view>  
      </view>
    </block>
  </scroll-view>
  <view class="commentInput">
    <input placeholder="留下你的精彩评论吧" class="input_box" bindblur='getComment' />
    <button class="comment_btn" bindtap='bindContent' data-vid='{{vid}}'>
      <text class='comment_txt'>发布</text>
    </button>
  </view>
</view>
<!-- 礼物列表 -->
<view animation="{{animationgifts}}" class="gifts_attr_box" wx:if="{{showGiftsStatus}}">
  <view class="giftsTitle">
    <image class='down' src='../../image/close@2x.png' bindtap='hideModal'></image>
  </view>                                                 
    <swiper style='height:460rpx;' indicator-dots="true">
      <swiper-item class='giftsLists'>
        <view class='giftsList'>
          <image src='../../image/ttbb.png' class='' style='width:130rpx;height:130rpx; '></image>
          <text class='giftsId'>甜甜冰棒</text>
          <text class='giftsScore'>50积分</text>
        </view> 
      </swiper-item> 
    </swiper>  
<view class='depositList'>
<view class='deposit'>
  <image src='../../image/score.png' style='width:30rpx;height:29rpx;'></image>
  <text> 积分: 999</text>
  </view>
    <view class='deposit' bindtap='deposit'>充值></view> 
  </view>
</view>
</view>