.bg-color,
page{
  height: 100%;
  background-color: #4B4B4B;
}
.person,
.infor-mark,
.infor-more{
  display: flex;
}
.top-content{
  padding: 0 30rpx;
}

.information{
  width: 70%;
  color: #fff; 
  padding: 20rpx 0;
}
.headimg{
  width: 30%;
  margin:30rpx 0;

}

.infor-mark{
 font-size: 40rpx;

}
.infor-img,
.redact{
  margin: 0 10rpx;
}
.infor-approve{
  font-size:20rpx;
  background-color:#fff;
  color:#333;
  border-radius:36rpx;
  height:30rpx;
  padding:0 20rpx;
  margin-top:16rpx;
  margin-left:30rpx;

}
.sign-text{
  font-size:28rpx;
  color:#cacaca;
  line-height:36rpx;
  margin:20rpx 0;

}
.infor-details{
  font-size:24rpx;
  color:#cacaca;
  line-height:36rpx;
}
.redact{
  color:#fff;
  font-size:24rpx;
  border:1rpx solid #fff;
  border-radius:30rpx;
  height:40rpx;
  padding:0 15rpx;
  line-height:40rpx;
  margin-top:16rpx;
}
.head-box,
.small-box{
  text-align: center
}
.head{
  height:120rpx;
  width:120rpx;
  border:4rpx solid #fff;
  border-radius:50%;
  margin: 0 auto;
}

.smallhead{
  height: 40rpx;
  width: 40rpx;
}
.other-data{
  width: 70%;
  color: #fff;
  font-size: 32rpx;
  line-height: 40rpx;
}
.statistics,
.action{
  display: flex;
  margin-bottom: 20rpx;
}
.item{
  width: 33.33%;
  text-align: left
}
.number{
  font-size: 34rpx;

}
.text{
  font-size: 24rpx;
  color: #c2c2c2
}
.view-detail,
.deposit-apply{
  color:#fff;
  font-size:24rpx;
  border:1rpx solid #fff;
  border-radius:30rpx;
  height:40rpx;
  padding:0 15rpx;
  line-height:40rpx;
  margin-left: 20rpx;
}
.tab-h{height: 80rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx; font-size: 16px; white-space: nowrap;color: #eee;margin-bottom: 4rpx;}
.tab-item{margin:0 20rpx;display: inline-block;font-size: 28rpx;}
.tab-item.active{color: #eee;position: relative;}
.tab-item.active:after{ content: "";display: block;height: 8rpx;width:60rpx;background: #eee;position: absolute; bottom: 0;left: 20rpx;border-radius: 16rpx;}
.block-item{display: flex; flex-wrap: wrap;}
.item-ans{ width: 32.82%;border: 1rpx solid #c2c2c2;justify-content:space-between; position: relative;}
.cover{width: 100%;}
.avatar{width: 100rpx;height: 100rpx;position: relative;padding-right: 30rpx;}
.avatar .img{width: 100%;height: 100%;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 12px;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #4675F9; color:#4675F9;}
.scoll-h{height: 100%;}

.cover-img{
  position:absolute;
  left:10rpx;
  bottom:10rpx;
  height:40rpx;
  width:40rpx;
}
.cover-text{
  position:absolute;
  left:50rpx;
  bottom:10rpx;
  color: #fff;
  font-size: 32rpx;
}
.vip{
  height:30rpx;
  width:30rpx;

}