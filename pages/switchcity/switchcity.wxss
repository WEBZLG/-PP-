.searchLetter {
  position: fixed;
  right: 10rpx;
  width: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  z-index: 1;
  border-radius:30rpx;
  background-color: rgba(0, 0, 0, 0.4)
}

.searchLetter view {
  margin-top: 20rpx;
}

.touchClass {
  color: #fff;
  padding: 46rpx 0;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.item_letter {
  display: flex;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #eee;
}

.item_city {
  display: flex;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #eee;
}

.hotcity-common {
  font-size: 24rpx;
  color: #cbcbcb;
  padding: 0 0 0 30rpx;
}

.thisCity {
  padding-top: 30rpx;
}

.thisCityName {
  display: inline-block;
  border-radius: 8rpx;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  min-width: 149.5rpx;
  margin: 20rpx 0 20rpx 20rpx;
}

.thishotText {
  color: #fff;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #fff !important;
}

.slectCity view {
  color: #fff !important;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 10rpx 0;
  width: 149.5rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: #eee;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.change-city{
  display: flex;
}
.save-btn{
  background-color:inherit;
  color:#eee;
  border:2rpx solid #eee;
  font-size:20rpx;
  height:42rpx;
  margin-top:24rpx;
  border-radius:30rpx;
  margin-left:44%;
  width:140rpx;
  line-height:36rpx;

}